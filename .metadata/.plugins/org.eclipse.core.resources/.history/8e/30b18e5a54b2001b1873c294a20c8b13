package checkpoint2;

public class Convert {
	double temperature;
	double  results;
	int decision;
	
	
	
	
	protected  void verficate(int decision, double temperature ){
		if(decision == 1) {
	       this.celsius(temperature); 		
		}else if(decision == 2   ) {
		   this.fahrenheit(temperature);	
		}else {
		   System.out.println("Valor nÃ£o existe");	
		}
	}



	private double celsius(double temperature) {
	    this.results =  this.temperature * 1.8 + 32;
	    return results;
		
	}
	private double fahrenheit(double temperature) {
	    this.results =  (this.temperature -32) * 5/9;
	    return results;
		
	}
	
	
	
	

}
