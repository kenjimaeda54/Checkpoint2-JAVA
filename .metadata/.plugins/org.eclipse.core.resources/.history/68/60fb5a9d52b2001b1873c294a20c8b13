package checkpoint2;

public class Convert {
	double temperature;
	double  results;
	int decision;
	
	
	
	
	public void verficate(this.decision) {
		if(this.decision == 1) {
	       this.celsius(this.temperature); 		
		}else if(this.decision == 2   ) {
		   this.fahrenheit(this.temperature);	
		}else {
		   System.out.println("Não existe essa opção"); 	
		}
	}



	private double celsius(double temperature) {
	    this.results =  this.temperature * 1.8 + 32;
	    return results;
		
	}
	private double fahrenheit(double temperature) {
	    this.results =  (this.temperature -32) * 5/9;
	    return results;
		
	}
	
	
	
	

}
